<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Style for form account manage-->
    <style name="InputEditTextAccounts" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:maxLength">75</item>
    </style>

    <!--Style for form account manage-->
    <style name="LayoutInputEditTextAccounts" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="boxBackgroundMode">@color/colorBackground</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="boxStrokeColor">@color/colorBorder</item>
        <item name="errorEnabled">true</item>
    </style>

</resources>
